{
  "name": "jordan-health-app",
  "version": "1.0.0",
  "description": "Diabetes Follow-Up System fÃ¼r Dr. Alshdaifat (Jordanien)",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:patient": "npm run dev --workspace=@jordan-health/patient-app",
    "dev:doctor": "npm run dev --workspace=@jordan-health/doctor-app",
    "dev:nutrition": "npm run dev --workspace=@jordan-health/nutrition-app",
    "dev:admin": "npm run dev --workspace=@jordan-health/admin-app",
    "dev:all": "concurrently -n \"patient,doctor,nutrition,admin\" -c \"blue,green,yellow,magenta\" \"npm run dev:patient\" \"npm run dev:doctor\" \"npm run dev:nutrition\" \"npm run dev:admin\"",
    "build": "npm run build --workspaces",
    "build:shared": "npm run build --workspace=@jordan-health/shared",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "keywords": [
    "diabetes",
    "healthcare",
    "jordan",
    "geriatric"
  ],
  "author": "Dr. Alshdaifat",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
